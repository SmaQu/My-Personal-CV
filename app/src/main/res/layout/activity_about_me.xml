<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smaqu.mypersonalcv.view.AboutMeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_activity_about_me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="9dp"
                android:text="@string/name"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_activity_about_me_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_activity_about_me_name"
                android:textSize="16sp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:text="@string/profession"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_view_activity_about_me_about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_activity_about_me_profession"
                android:gravity="start"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="@string/about_me"
                android:textColor="@android:color/black"
                tools:text="TextView" />

            <TextView
                android:id="@+id/text_view_activity_about_me_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_activity_about_me_about_me"
                android:paddingBottom="36dp"
                android:paddingEnd="9dp"
                android:paddingStart="9dp"
                android:paddingTop="36dp"
                android:text="@string/signature"
                android:textColor="@android:color/black"
                tools:text="TextView" />
        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_call_white_36px" />

</android.support.design.widget.CoordinatorLayout>