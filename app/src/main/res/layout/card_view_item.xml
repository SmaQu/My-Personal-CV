<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/card_view_item"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:elevation="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_card_view_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            tools:src="@drawable/testing_photo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_view_card_view_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_card_view_item_image"
            android:fontFamily="casual"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="15dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            tools:text="WyksztaÅ‚cenie"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>